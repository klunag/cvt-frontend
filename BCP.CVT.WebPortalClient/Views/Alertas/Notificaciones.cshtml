@{
    ViewBag.Title1 = "Bandeja de notificaciones enviadas";
    ViewBag.Title2 = "Alertas";
    ViewBag.Title3 = "Bandeja de notificaciones enviadas";
}

<div class="card">
    <div class="card-body">
        <div class="card-search">
            <fieldset class="fieldset">
                <legend class="legend">Filtro de búsqueda</legend>
                <div class="card-search-box">
                    <form action="javascript:void(0);">
                        <div class="row gutter-xs">
                            <div class="col-xs-3 col-md-3">
                                <div class="text-left" data-toggle="match-height">
                                    <h5>Para: </h5>
                                    <input id="txtPara" name="txtPara" class="form-control" type="text" placeholder="">
                                </div>
                            </div>
                            <div class="col-xs-3 col-md-3">
                                <div class="text-left" data-toggle="match-height">
                                    <h5>Asunto: </h5>
                                    <input id="txtAsunto" name="txtAsunto" class="form-control" type="text" placeholder="">
                                </div>
                            </div>
                            <div class="col-xs-3 col-md-2">
                                <div class="text-left" data-toggle="match-height">
                                    <h5>Tipo: </h5>
                                    <select id="cbTipo" name="cbTipo" class="form-control"></select>
                                </div>
                            </div>
                            <div class="col-xs-3 col-md-2">
                                <h5>Fecha registro: </h5>
                                <div class="input-group date" id="divFechaRegistro">
                                    <input type="text" id="txtFechaRegistro" name="txtFechaRegistro" class="form-control" value="@DateTime.Now.ToString("dd/MM/yyyy")" />
                                    <span class="input-group-addon">
                                        <span class="icon icon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                            <div class="col-xs-3 col-md-2">
                                <div class="text-left" data-toggle="match-height">
                                    <h5>&nbsp;</h5>
                                    <button id="btnBuscar" class="btn btn-primary btn-width-custom" onclick="RefrescarListado()">Buscar</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </fieldset>
        </div>
    </div>
</div>

<div class="panel panel-body text-right" style="background-color: transparent;" data-toggle="match-height">    
    <a class="btn btn-primary btn-width-custom" href="javascript: void(0)" onclick="ExportarInfo()">
        <span class="icon icon-external-link"></span>
        <span class="count-text">Exportar</span>
    </a>
</div>

<div class="row gutter-xs">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                <strong>Registros de notificaciones</strong>
            </div>
            <div class="card-body">
                <table id="tblNotificaciones" class="table table-striped table-nowrap dataTable" cellspacing="0" width="100%" data-unique-id="Id" data-mobile-responsive="true">
                    <thead>
                        <tr>
                            <th data-formatter="rowNumFormatterServer" data-valign="middle" data-align="center" data-width="2%">#</th>
                            <th data-field="FechaCreacionFormato" data-halign="center" data-valign="middle" data-align="left" data-sortable="true" data-sort-name="FechaCreacion" data-width="20%">Fecha de registro</th>
                            <th data-field="TipoNotificacionToString" data-halign="center" data-valign="middle" data-align="left" data-sortable="true" data-sort-name="TipoNotificacionId" data-width="20%">Tipo de notificación</th>
                            <th data-field="Para" data-halign="center" data-valign="middle" data-align="left" data-sortable="true" data-width="20%">Para</th>                            
                            <th data-field="Asunto" data-halign="center" data-valign="middle" data-align="center" data-width="10%" data-sortable="true" data-sort-name="Asunto">Asunto</th>
                            <th data-field="FlagEnviadoToString" data-halign="center" data-valign="middle" data-align="center" data-sortable="true" data-sort-name="FlagEnviado" data-width="10%">Estado</th>
                            <th data-field="FechaEnvioToString" data-halign="center" data-valign="middle" data-align="center" data-sortable="true" data-sort-name="FechaEnvio" data-width="10%">Fecha de envío</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/app/notificaciones.js"></script>

