@{

    ViewBag.Title1 = "Alertas";
    ViewBag.Title2 = "Alertas";
    ViewBag.Title3 = "Técnicas";
}


<div class="card">
    <div class="card-body">
        <div class="card-search">
            <div class="card-search-box">
                <form action="javascript:void(0);">
                    <div class="row gutter-xs form-group">
                        <div class="col-md-4 col-xs-8 col-sm-9">
                            <h5>Fecha: </h5>
                            <div class="input-group date" id="dpFecConsulta-btn">
                                <span class="input-group-addon">
                                    <span class="icon icon-calendar"></span>
                                </span>
                                <input type="text" id="dpFecConsulta" name="dpFecConsulta" class="form-control" />
                                <span class="input-group-btn">
                                    <button id="btnBuscador" class="btn btn-primary btn-width-custom" type="button">Buscar</button>
                                </span>
                            </div>
                        </div>
                        <div class="col-md-offset-6 col-md-2 text-right">
                            <h5>&nbsp;</h5>
                            <button id="btnExportar" class="btn btn-primary btn-width-custom btn-sm" type="button">Exportar</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>



<div class="row gutter-xs">
    <div class="col-xs-12">
        <div class="card">

            <div class="card-body">
                <table id="tbl-alertas" class="table table-striped table-nowrap dataTable" cellspacing="0" width="100%"
                       data-unique-id="Id"
                       data-detail-view="true" data-detail-formatter="detailFormatter">
                    <thead>
                        <tr>
                            <th data-formatter="rowNumFormatterServer" data-valign="middle" data-align="center" data-width="30">#</th>
                            @*<th data-field="Id" data-halign="center" data-valign="middle" data-align="left" data-sortable="true" data-sort-name="Id">Código</th>*@
                            <th data-field="Descripcion" data-halign="center" data-valign="middle" data-align="left" data-sortable="true" data-sort-name="Descripcion">Descripción</th>
                            <th data-field="Id" data-formatter="semaforoFormatter" data-halign="center" data-valign="middle" data-align="center">Estado</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<!--Modal Add or Edit-->
<div id="MdAddOrEditModal" tabindex="-1" role="dialog" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="titleForm"></h4>
            </div>
            <div class="modal-body">
                <form id="formAddOrEdit">
                    <input type="hidden" id="hdIdAlerta" name="hdIdAlerta" value="0" />
                    <input type="hidden" id="hdIdAlertaProgramacion" name="hdIdAlertaProgramacion" value="0" />
                    <div class="row">
                        <div class="col-md-6">
                            <label class="control-label">Frecuencia</label>
                            <select id="cbTipoFrecuencia" name="cbTipoFrecuencia" class="form-control"></select>
                        </div>
                        <div class="col-md-6">
                            <label class="control-label">Fecha inicio</label>
                            <div class="input-group date" id="divFechaInicio">
                                <input type="text" id="txtFechaInicio" name="txtFechaInicio" class="form-control" value="@DateTime.Now.ToString("dd/MM/yyyy")" />
                                <span class="input-group-addon">
                                    <span class="icon icon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="control-label">
                                ¿Activo?
                            </label>
                            <div class="input-group" id="divActivo">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>Hora<span></span></label>
                            <input id="txtHora" name="txtHora" class="form-control" type="number" step="1" min="1" max="24">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label class="control-label">Asunto:</label>
                            <input id="txtAsunto" name="txtAsunto" class="form-control" type="text">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label class="control-label">Enviar a:</label>
                            <input id="txtEnviarA" name="txtEnviarA" class="form-control" type="text">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button id="btnRegistrar" class="btn btn-primary" onclick="RegistrarAddOrEdit()" type="button" data-loading-text="Procesando...">Registrar</button>
            </div>
        </div>
    </div>
</div>
<!--Modal Add or Edit-->

