<!--Modal Add or Edit-->
<div id="mdAddOrEditRegistro" tabindex="-1" role="dialog" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="title-form"></h4>
            </div>
            <div class="modal-body">
                <form id="formAddOrEditRegistro">
                    <div class="form-group all registroField">
                        <label class="control-label">Nombre: </label>
                        <input id="txtNombre" name="txtNombre" maxlength="200" class="form-control all registroField" type="text">
                        <input type="hidden" name="hdRegistroId" id="hdRegistroId" value="0" />
                    </div>
                    <div class="form-group all registroField">
                        <label class="control-label">Descripción: </label>
                        <textarea id="txtDescripcion" name="txtDescripcion" maxlength="500" rows="3" class="form-control all registroField"></textarea>
                    </div>
                    <div class="form-group all arquitectoField">
                        <label class="control-label">Matrícula: </label>
                        <div class="input-group">
                            <input id="txtReponsable" name="txtReponsable" class="form-control all arquitectoField" type="text">
                            <span class="input-group-btn">
                                <button id="btnValidarMatricula" class="btn btn-primary" type="button" title="Validar matrícula">
                                    <span id="spIconButton" class="glyphicon glyphicon-question-sign"></span>
                                </button>
                            </span>
                        </div>
                    </div>
                    <div class="form-group all arquitectoField">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Correo: </label>
                                    <input id="txtCorreo" name="txtCorreo" class="form-control all arquitectoField" type="text" disabled>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Nombres: </label>
                                    <input id="txtNombreResponsable" name="txtNombreResponsable" class="form-control all arquitectoField" type="text" disabled>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <input type="hidden" name="hdMantenimientoId" id="hdMantenimientoId" value="0" />
                <input type="hidden" name="hdEntidadRelacionId" id="hdEntidadRelacionId" value="0" />
                <input type="hidden" name="hdFlagValidarMatricula" id="hdFlagValidarMatricula" value="0" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button id="btnRegistrar" class="btn btn-primary" type="button" data-loading-text="Procesando...">Registrar</button>
            </div>
        </div>
    </div>
</div>
