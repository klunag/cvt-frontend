@{
    ViewBag.Title1 = "Auditoría";
    ViewBag.Title2 = "Configuración";
    ViewBag.Title3 = "Auditoría";
}

<style>
    .idAsociado {
        min-width: 180px;
    }

</style>

 <div class="card">
    <div class="card-body">
        <div class="card-search">
            <fieldset class="fieldset">
                <legend class="legend">Filtro de búsqueda</legend>
                <div class="card-search-box">
                    <form action="javascript:void(0);">
                        <div class="row gutter-xs">
                            <div class="col-xs-3 col-md-3">
                                <div class="text-left" data-toggle="match-height">
                                    <h5>Acción: </h5>
                                    <select id="cbFilAccion" name="cbFilAccion" class="form-control"></select>
                                </div>
                            </div>
                            <div class="col-xs-3 col-md-3">
                                <div class="text-left" data-toggle="match-height">
                                    <h5>Entidad: </h5>
                                    <div class="input-with-icon">
                                        <input id="txtFiltroEntidad" name="txtFiltroEntidad" class="form-control input-thick pill input-with-icon-search" type="text">
                                        <span class="icon icon-search input-icon"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-3 col-md-3">
                                <div class="text-left" data-toggle="match-height">
                                    <h5>Campo: </h5>
                                    <div class="input-with-icon">
                                        <input id="txtFiltroCampo" name="txtFiltroCampo" class="form-control input-thick pill input-with-icon-search" type="text">
                                        <span class="icon icon-search input-icon"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-3 col-md-3">
                                <div class="text-left" data-toggle="match-height">
                                    <h5>Matrícula: </h5>
                                    <div class="input-with-icon">
                                        <input id="txtFiltroMatricula" name="txtFiltroMatricula" class="form-control input-thick pill input-with-icon-search" type="text">
                                        <span class="icon icon-search input-icon"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-3 col-md-3">
                                <h5>Fecha Desde: </h5>
                                <div class="input-group date" id="divFechaDesde">
                                    <input type="text" id="txtFiltroFechaDesde" name="txtFiltroFechaDesde" class="form-control" value="@DateTime.Now.ToString("dd/MM/yyyy")" />
                                    <span class="input-group-addon">
                                        <span class="icon icon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                            <div class="col-xs-3 col-md-3">
                                <h5>Fecha Hasta: </h5>
                                <div class="input-group date" id="divFechaHasta">
                                    <input type="text" id="txtFiltroFechaHasta" name="txtFiltroFechaHasta" class="form-control" value="@DateTime.Now.ToString("dd/MM/yyyy")" />
                                    <span class="input-group-addon">
                                        <span class="icon icon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="row gutter-xs">
                            <div class="col-md-12">
                                <div class="text-right">
                                    <a class="btn btn-primary btn-width-custom" href="javascript: void(0)" onclick="RefrescarListado()">
                                        <span class="count-text">Buscar</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </fieldset>
        </div>
    </div>
</div> 

<div class="panel panel-body text-right" style="background-color: transparent;" data-toggle="match-height">
    <a class="btn btn-primary btn-width-custom" href="javascript: void(0)" onclick="ExportarInfo()">
            <span class="icon icon-external-link"></span>
            <span class="count-text">Exportar</span>
        </a>
</div>

<div class="row gutter-xs">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                <strong>Auditoria</strong>
            </div>
            <div class="card-body">
                <table id="tblData" class="table table-striped table-nowrap dataTable" cellspacing="0" width="100%" data-unique-id="Id" data-mobile-responsive="true">
                    <thead>
                        <tr>
                            <th data-formatter="rowNumFormatterServer" data-valign="middle" data-align="center" data-width="2%">#</th>
                            <th data-field="Entidad" data-halign="center" data-valign="middle" data-align="left" data-width="13%" data-sort-name="Entidad">Entidad</th>
                            <th data-field="Accion" data-halign="center" data-valign="middle" data-align="left" data-width="8%" data-sort-name="Accion">Acción</th>
                            <th data-formatter="idasociadoFormatter" data-field="IdAsociado" data-halign="center" data-valign="middle" data-align="left" data-width="8%" data-sort-name="EntidadId">Id</th>
                            <th data-field="Campo" data-halign="center" data-valign="middle" data-align="left" data-width="15%" data-sort-name="Campo">Campo</th>
                            <th data-field="ValorAnterior" data-halign="center" data-valign="middle" data-align="left" data-width="15%" data-sort-name="Entidad">Valor Anterior</th>
                            <th data-field="ValorNuevo" data-halign="center" data-valign="middle" data-align="left" data-width="15%" data-sort-name="Entidad">Valor Nuevo</th>
                            <th data-field="FechaCreacionFormato" data-halign="center" data-valign="middle" data-align="left" data-width="17%" data-sort-name="FechaOrden">Fecha actualización</th>
                            <th data-field="CreadoPor" data-halign="center" data-valign="middle" data-align="left" data-width="15%" data-sort-name="CreadoPor">Creado por</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/app/auditoria.js?v=1.0.0"></script>