
@{
    ViewBag.Title1 = "Bitácora de eventos";
    ViewBag.Title2 = "Gestión del portafolio";
    ViewBag.Title3 = "Bitácora de eventos";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="card-search">
            <fieldset class="fieldset">
                <legend class="legend">Filtro de búsqueda</legend>
                <div class="card-search-box">
                    <form action="javascript:void(0);">
                        <div class="row gutter-xs">
                            <div class="col-xs-4 col-md-4">
                                <div class="text-left" data-toggle="match-height">
                                    <h5>Código de aplicación: </h5>
                                    <input id="txtCodigoApt" name="txtPara" class="form-control" type="text" placeholder="">
                                </div>
                            </div>                            
                            <div class="col-xs-4 col-md-4">
                                
                            </div>
                            <div class="col-xs-4 col-md-4">
                                
                            </div>
                            <div class="col-xs-4 col-md-4">
                                <div class="text-left" data-toggle="match-height">
                                    <h5>&nbsp;</h5>
                                    <button id="btnBuscar" class="btn btn-primary btn-width-custom" onclick="RefrescarListado()">Buscar</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </fieldset>
        </div>
    </div>
</div>

<div class="panel panel-body text-right" style="background-color: transparent;" data-toggle="match-height">
    <a class="btn btn-primary btn-width-custom" href="javascript: void(0)" onclick="ExportarInfo()">
        <span class="icon icon-external-link"></span>
        <span class="count-text">Exportar</span>
    </a>
</div>

<div class="row gutter-xs">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                <strong>Bitácora de eventos</strong>
            </div>
            <div class="card-body">
                <table id="tblRegistros" class="table table-striped table-nowrap dataTable" cellspacing="0" width="100%" data-unique-id="Id" data-mobile-responsive="true">
                    <thead>
                        <tr>
                            <th data-formatter="rowNumFormatterServer" data-valign="middle" data-align="center" data-width="2%">#</th>
                            <th data-field="CodigoAPT" data-halign="center" data-valign="middle" data-align="left" data-sortable="true" data-sort-name="CodigoAPT" data-width="10%">Código de aplicación</th>
                            <th data-field="NombreAplicacion" data-halign="center" data-valign="middle" data-align="left" data-sortable="true" data-sort-name="NombreAplicacion" data-width="60%">Nombre</th>
                            <th data-field="TipoActivoName" data-halign="center" data-valign="middle" data-align="center" data-sortable="true" data-sort-name="TipoActivoName" data-width="10%">Tipo de Activo</th>
                            @*<th data-field="NombreUsuarioCreacion" data-halign="center" data-valign="middle" data-align="center" data-sortable="true" data-sort-name="NombreUsuarioCreacion" data-width="20%">Usuario Creación</th>*@
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/app/ConfiguracionPortafolio/bitacora.js?v=1.0.0"></script>