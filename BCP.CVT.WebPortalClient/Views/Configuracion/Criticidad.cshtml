@{
    ViewBag.Title1 = "Configuración de criticidades";
    ViewBag.Title2 = "Configuración";
    ViewBag.Title3 = "Criticidades";
}

<div class="card">
    <div class="card-body">
        <div class="card-search">
            <fieldset class="fieldset">
                <legend class="legend">Filtro de búsqueda</legend>
                <div class="card-search-box">
                    <form action="javascript:void(0);">
                        <div class="form-group row">
                            <div class="col-md-10 col-xs-8 col-sm-9">
                                <div class="input-with-icon">
                                    <input id="txtBusCrit" class="form-control input-thick pill input-with-icon-search" type="text" placeholder="Nombre de la criticidad...">
                                    <span class="icon icon-search input-icon"></span>
                                </div>
                            </div>
                            <div class="col-md-2 col-xs-4 col-sm-3">
                                <button id="btnBusCrit" class="btn btn-primary btn-width-custom" onclick="buscarCriticidad()">Buscar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </fieldset>            
        </div>
    </div>
</div>

<div class="panel panel-body text-right" style="background-color: transparent;" data-toggle="match-height">
    <a class="btn btn-primary btn-width-custom" href="javascript: void(0)" onclick="AddCriticidad()">
        <span class="icon icon-plus"></span>
        <span class="count-text">Nuevo</span>
    </a>
</div>

<div class="row gutter-xs">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                <strong>Registros de criticidades</strong>
            </div>
            <div class="card-body">
                <table id="tbl-criticidad" class="table table-striped table-nowrap dataTable" cellspacing="0" width="100%" data-unique-id="Id" data-mobile-responsive="true">
                    <thead>
                        <tr>
                            <th data-formatter="rowNumFormatterServer" data-valign="middle" data-align="center" data-width="30">#</th>
                            <th data-field="Id" data-halign="center" data-valign="middle" data-align="left" data-sortable="true" data-sort-name="Id">Código</th>
                            <th data-formatter="linkFormatter" data-field="DetalleCriticidad" data-halign="center" data-valign="middle" data-align="left" data-sortable="true" data-sort-name="DetalleCriticidad">Nombre</th>
                            <th data-field="PrefijoBase" data-halign="center" data-valign="middle" data-align="left" data-sortable="true">Prefijo base</th>
                            <th data-field="Prioridad" data-halign="center" data-valign="middle" data-align="left" data-sortable="true">Peso</th>
                            <th data-field="FechaCreacionFormato" data-halign="center" data-valign="middle" data-align="left" data-sortable="true" data-sort-name="FechaCreacion">Fecha de registro</th>
                            <th data-field="UsuarioCreacion" data-halign="center" data-valign="middle" data-align="center" data-sortable="true" data-sort-name="UsuarioCreacion">Creado por</th>
                            <th data-field="ActivoDetalle" data-halign="center" data-valign="middle" data-align="center" data-sortable="true" data-sort-name="Activo">Estado</th>
                            <th data-formatter="opciones" data-field="Opciones" data-halign="center" data-valign="middle" data-align="center">Opciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<!--Modal Add or Edit (Criticidad)-->
<div id="MdAddOrEditCrit" tabindex="-1" role="dialog" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="titleFormCrit"></h4>
            </div>
            <div class="modal-body">
                <form id="formAddOrEditCrit">
                    <div class="form-group">
                        <label class="control-label">Prioridad: </label>
                        <input id="txtPrioridadCrit" class="form-control" type="text" name="txtPrioridadCrit">
                        <input type="hidden" name="hdCriticidadId" id="hdCriticidadId" value="0" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Nombre: </label>
                        <input id="txtNombreCrit" class="form-control" type="text" name="txtNombreCrit" maxlength="100">
                    </div>
                    <div class="form-group">
                        <label class="control-label">Prefijo: </label>
                        <input id="txtPrefCrit" class="form-control" type="text" name="txtPrefCrit" maxlength="10">
                    </div>

                    <div class="form-group">
                        <label class="control-label">
                            ¿Activo?
                        </label>
                        <div class="input-group" id="divActCrit">
                        </div>
                        @*<input type="hidden" name="hdNumTecAsoc" id="hdNumTecAsoc" value="0" />
                            <input type="text" id="msjActivo" name="msjActivo" class="form-control clActivo" style="display:none;" />*@
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button id="btnRegCrit" class="btn btn-primary" onclick="guardarAddOrEditCriticidad()" type="button" data-loading-text="Procesando...">Registrar</button>
            </div>
        </div>
    </div>
</div>
<!--Modal Add or Edit (Criticidad)-->
<script src="~/app/criticidad.js"></script>