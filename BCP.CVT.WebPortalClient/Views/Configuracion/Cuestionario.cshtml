            <thead>
                <tr>
                    <th data-formatter="cogFormatter" data-field="Id" data-halign="center" data-valign="middle" data-align="center" data-width="3">
                        <i class="glyphicon glyphicon-cog"></i>
                    </th>
                    <th data-formatter="nombreFormatter"
                        data-field="Nombre"
                        data-halign="center"
                        data-width="20"
                        data-valign="middle"
                        data-cell-style="cellStyle"
                        data-align="left">
                        Sección PAE  @*<a href="javascript:AddRegistro(@Html.Raw((int)EConfiguracionPortafolio.CuestionarioPae))" title="Nuevo registro"><i class="glyphicon glyphicon-plus-sign"></i></a>*@
                    </th>
                </tr>
            </thead>
        </table>
    </div>
    <div class="col-md-4" style="display:none; margin:0px; padding-left:0px;">
        @*<div id="toolbar2">
            <button id="button2" onclick="showHideActions(@Html.Raw((int)EConfiguracionPortafolio.PreguntaPae))" class="btn btn-secondary">Mostrar acciones</button>
        </div>*@
        <table id="tbl2" data-unique-id="Id" data-mobile-responsive="true" data-toggle="table" data-show-pagination-switch="true" @*data-toolbar="#toolbar2"*@>
            <thead>
                <tr>
                    <th data-formatter="cogFormatter" data-field="Id" data-halign="center" data-valign="middle" data-align="center" data-width="3">
                        <i class="glyphicon glyphicon-cog"></i>
                    </th>
                    <th data-formatter="nombreFormatter"
                        data-field="Nombre"
                        data-halign="center"
                        data-width="20"
                        data-valign="middle"
                        data-cell-style="cellStyle"
                        data-align="left">
                        Preguntas PAE  @*<a href="javascript:AddRegistro(@Html.Raw((int)EConfiguracionPortafolio.PreguntaPae))" title="Nuevo registro"><i class="glyphicon glyphicon-plus-sign"></i></a>*@
                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<!--Modal Add or Edit-->
<div id="mdAddOrEditRegistro" tabindex="-1" role="dialog" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="title-form"></h4>
            </div>
            <div class="modal-body">
                <form id="formAddOrEditRegistro">
                    <div class="form-group">
                        <label class="control-label">Nombre: </label>
                        <input id="txtNombre" name="txtNombre" class="form-control" type="text">
                        <input type="hidden" name="hdRegistroId" id="hdRegistroId" value="0" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Descripción: </label>
                        <textarea id="txtDescripcion" name="txtDescripcion" rows="4" class="form-control"></textarea>
                        @*<input id="txtDescripcion" name="txtDescripcion" class="form-control" type="text">*@
                    </div>
                </form>
                <input type="hidden" name="hdMantenimientoId" id="hdMantenimientoId" value="0" />
                <input type="hidden" name="hdEntidadRelacionId" id="hdEntidadRelacionId" value="0" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button id="btnRegistrar" class="btn btn-primary" type="button" data-loading-text="Procesando...">Registrar</button>
            </div>
        </div>
    </div>
</div>
<!--Modal Add or Edit-->
<script>
    const ENTIDAD_MANTENIMIENTO = {
        CuestionarioPae: @Html.Raw((int)EConfiguracionPortafolio.CuestionarioPae),
        PreguntaPae: @Html.Raw((int)EConfiguracionPortafolio.PreguntaPae)
    };
</script>

<script src="~/app/ConfiguracionPortafolio/cuestionarioPAE.js?v=1.0.1"></script>