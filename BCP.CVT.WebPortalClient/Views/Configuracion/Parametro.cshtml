@{
    ViewBag.Title1 = "Configuración de Parámetros";
    ViewBag.Title2 = "Configuración";
    ViewBag.Title3 = "Parámetros";
}

<div class="card" style="margin-bottom:25px;">
    <div class="card-body">
        <div class="card-search">
            <fieldset class="fieldset">
                <legend class="legend">Filtro de búsqueda</legend>
                <div class="card-search-box">
                    <form action="javascript:void(0);">
                        <div class="form-group row">
                            <div class="col-md-10 col-xs-8 col-sm-9">
                                <div class="input-with-icon">
                                    <input id="txtBusConfig" class="form-control input-thick pill input-with-icon-search" type="text" placeholder="Nombre del parámetro...">
                                    <span class="icon icon-search input-icon"></span>
                                </div>
                            </div>
                            <div class="col-md-2 col-xs-4 col-sm-3">
                                <button id="btnBusConfig" class="btn btn-primary btn-width-custom" onclick="buscarConfiguracion()">Buscar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </fieldset>          
        </div>
    </div>
</div>

<div class="row gutter-xs">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                <strong>Registros de Parámetros</strong>
            </div>
            <div class="card-body">
                <table id="tbl-config" class="table table-striped table-nowrap dataTable" cellspacing="0" width="100%" data-unique-id="Id" 
                       data-detail-view="true" data-detail-formatter="detailFormatter">
                    <thead>
                        <tr>
                            <th data-formatter="rowNumFormatterServer" data-valign="middle" data-align="center" data-width="30">#</th>
                            <th data-field="Nombre" data-halign="center" data-valign="middle" data-align="left" data-sortable="true" >Tipo de Parámetro</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<!--Modal Add or Edit (Config. Parametros)-->
<div id="MdAddOrEditConfig" tabindex="-1" role="dialog" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="titleFormConfig"></h4>
            </div>
            <div class="modal-body">
                <form id="formAddOrEditConfig">
                    <div class="form-group">
                        <label class="control-label">Parametro: </label>
                        <input id="txtParConfig" class="form-control" type="text" name="txtParConfig" readonly>
                        <input type="hidden" name="hdConfigId" id="hdConfigId" value="0" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Descripción: </label>
                        <textarea id="txtDesConfig" class="form-control" rows="3" name="txtDesConfig"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Valor: </label>
                        <input id="txtValConfig" class="form-control" type="text" name="txtValConfig">
                    </div>
                    @*<div class="form-group">
                        <label class="control-label">
                            ¿Activo?
                        </label>
                        <div class="input-group" id="divActConfig">
                        </div>
                        <input type="hidden" name="hdNumTecAsoc" id="hdNumTecAsoc" value="0" />
                        <input type="text" id="msjActivo" name="msjActivo" class="form-control clActivo" style="display:none;" />
                    </div>*@
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button id="btnRegConfig" class="btn btn-primary" onclick="ActualizarParametro()" type="button" data-loading-text="Procesando...">Registrar</button>
            </div>
        </div>
    </div>
</div>
<!--Modal Add or Edit (Config. Parametros)-->

<script src="~/app/parametro.js"></script>