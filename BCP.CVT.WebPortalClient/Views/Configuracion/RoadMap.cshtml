@{
    ViewBag.Title1 = "Roadmap de aplicaciones";
    ViewBag.Title2 = "Configuración";
    ViewBag.Title3 = "Roadmap de aplicaciones";
}

<link href="~/Content/spectrum.css" rel="stylesheet" />
<script src="~/Scripts/spectrum.js"></script>
<div class="card">
    <div class="card-body">
        <div class="card-search">
            <fieldset class="fieldset">
                <legend class="legend">Filtro de búsqueda</legend>
                <div class="card-search-box">
                    <div class="row gutter-xs form-group">
                        <div class="col-md-10 col-xs-8 col-sm-9">
                            <div class="input-with-icon">
                                <input id="txtFiltro" class="form-control input-thick pill input-with-icon-search" type="text" placeholder="Roadmap">
                                <span class="icon icon-search input-icon"></span>
                            </div>
                        </div>
                        <div class="col-md-2 col-xs-4 col-sm-3">
                            <button id="btnBuscar" class="btn btn-primary btn-width-custom" onclick="RefrescarListado()">Buscar</button>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</div>
<div class="panel panel-body text-right" style="background-color: transparent;" data-toggle="match-height">
    @*<a class="btn btn-primary btn-width-custom" href="javascript: void(0)" onclick="ExportarInfo()">
        <span class="icon icon-external-link"></span>
        <span class="count-text">Exportar</span>
    </a>*@
</div>
<div class="row gutter-xs">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                <strong>Registros identificados luego de la importación de las aplicaciones</strong>
            </div>
            <div class="card-body">
                <table id="tblRegistro" class="table " data-mobile-responsive="true" data-unique-id="Id">
                    <thead>
                        <tr>
                            <th data-formatter="rowNumFormatterServer" data-valign="middle" data-align="center" data-width="30">#</th>
                            <th data-field="Nombre" data-halign="center" data-valign="middle" data-align="left" data-sortable="true">Nombre</th>
                            <th data-formatter="colorFormatter" data-field="Color" data-halign="center" data-valign="middle" data-align="center" width="20px" data-sortable="true">Color configurado</th>
                            <th data-field="FechaModificacionStr" data-halign="center" data-valign="middle" data-align="center" data-sortable="true" data-sort-name="FechaModificacion">Fecha de modificación</th>
                            <th data-field="UsuarioModificacion" data-halign="center" data-valign="middle" data-align="center" data-sortable="true" data-sort-name="UsuarioModificacion">Modificado por</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <input type="hidden" name="hdFiltro" id="hdFiltro" value="" />
</div>

<!--Modal Cambiar Color (RoadMap)-->
<div id="MdAddOrEditModal" tabindex="-1" role="dialog" class="modal fade bd-example-modal-sm">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="titleForm"></h4>
            </div>
            <div class="modal-body">
                <form id="formRegistro">
                    <input type="hidden" id="hdId" name="hdId" value="0" />
                    <div class="form-group">
                        <label class="control-label">
                            Nombre:
                        </label>
                        <input id="txtNombre" name="txtNombre" class="form-control" type="text" readonly>
                    </div>
                    <div class="form-group">
                        <label class="control-label">
                            Color:
                        </label>
                        <input name="txtColor" id="txtColor" class="form-color" type="text" />
                        <input type="hidden" id="hdColor" name="hdColor" value="" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button id="btnGuardarRegistro" type="button" class="btn btn-primary" onclick="GuardarRegistro()" data-loading-text="Procesando...">Aceptar</button>
            </div>
        </div>
    </div>
</div>
<!--Modal Cambiar Estado (RoadMap)-->

<script src="~/app/roadMap.js"></script>
