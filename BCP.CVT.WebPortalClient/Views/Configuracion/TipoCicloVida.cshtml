
@{
    ViewBag.Title1 = "Tipo de Ciclo de Vida";
    ViewBag.Title2 = "Configuración";
    ViewBag.Title3 = "Tipo de Ciclo de Vida";
}

<style>
    .disabled_a {
        color: gray !important;
    }
</style>

<div class="panel panel-body text-right" style="background-color: transparent;" data-toggle="match-height">
    <a class="btn btn-primary btn-width-custom" href="javascript: void(0)" onclick="AddTipoCicloVida()">
        <span class="icon icon-plus"></span>
        <span class="count-text">Nuevo</span>
    </a>
</div>

<div class="row gutter-xs">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                <strong>Relación de Tipos de Ciclo de vida configurados</strong>
            </div>
            <div class="card-body">
                <table id="tbTipoCicloVida" class="table table-striped table-nowrap dataTable" cellspacing="0" width="100%" data-unique-id="Id" data-mobile-responsive="true">
                    <thead>
                        <tr>
                            <th data-formatter="rowNumFormatterServer" data-valign="middle" data-align="center" data-width="30">#</th>
                            <th data-formatter="linkFormatter" data-field="Nombre" data-halign="center" data-valign="middle" data-align="left" data-sortable="true" data-sort-name="Nombre">Nombre</th>
                            <th data-field="NroPeriodo" data-halign="center" data-valign="middle" data-align="left" data-sortable="true">Nro.<br />Periodos</th>
                            <th data-formatter="setDefault" data-field="FlagDefault" data-halign="center" data-valign="middle" data-align="center" data-sortable="true">Flag Default</th>
                            <th data-formatter="setTecnologia" data-field="FlagTecnologia" data-halign="center" data-valign="middle" data-align="center" data-sortable="true">Flag Tecnología</th>
                            <th data-field="FechaCreacionFormato" data-halign="center" data-valign="middle" data-align="left" data-sortable="true" data-sort-name="FechaCreacion">Fecha de registro</th>
                            <th data-field="UsuarioCreacion" data-halign="center" data-valign="middle" data-align="center" data-sortable="true" data-sort-name="UsuarioCreacion">Creado por</th>
                            <th data-field="ActivoDetalle" data-halign="center" data-valign="middle" data-align="center" data-sortable="true" data-sort-name="Activo">Estado</th>
                            <th data-formatter="opciones" data-field="Opciones" data-halign="center" data-valign="middle" data-align="center">Opciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<!--Modal Add or Edit (Tipo de Ciclo de Vida)-->
<div id="MdAddOrEditTipoCicloVida" tabindex="-1" role="dialog" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="titleFormTipoCicloVida">Registro del Tipo de Ciclo de Vida</h4>
            </div>
            <div class="modal-body">
                <form id="formAddOrEditTipoCicloVida">
                    <div class="form-group">
                        <label class="control-label">Nombre: </label>
                        <input id="txtNombreTipoCiclo" class="form-control" type="text" name="txtNombreTipoCiclo" maxlength="100">
                    </div>
                    <div class="form-group">
                        <label class="control-label">Descripción: </label>
                        <input id="txtDescripTipoCiclo" class="form-control" type="text" name="txtDescripTipoCiclo" maxlength="100">
                    </div>
                    <div class="form-group">
                        <label class="control-label">Periodo (en meses) para estado ambar (menor a): </label>
                        <input id="txtPeriodoTipoCiclo" class="form-control" type="text" name="txtPeriodoTipoCiclo" maxlength="2">
                    </div>
                    <div class="form-group">
                        <label class="control-label">
                            Flag Mostrar en Tecnología 
                        </label>
                        <div class="input-group" id="divFlagTecnologia">
                        </div>
                    </div>
                </form>
                <input type="hidden" name="hdTipoCicloId" id="hdTipoCicloId" value="" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button id="btnRegTipoCicloVida" class="btn btn-primary" onclick="guardarAddOrEditTipoCicloVida()" type="button" data-loading-text="Procesando...">Registrar</button>
            </div>
        </div>
    </div>
</div>

<script src="~/app/ConfiguracionPortafolio/tipoCicloVida.js"></script>