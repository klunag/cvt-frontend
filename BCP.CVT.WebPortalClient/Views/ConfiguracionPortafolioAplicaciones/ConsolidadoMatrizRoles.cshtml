
@{
	ViewBag.Title1 = "Consolidado de Matriz de Roles";
	ViewBag.Title2 = "Matriz de Roles";
	ViewBag.Title3 = "Consolidado de Matriz de Roles";

}

<div class="card">
	<div class="card-body">
		<div class="card-search">
			<fieldset class="fieldset">
				<legend class="legend">Filtro de búsqueda</legend>
				<div class="card-search-box">
					<form action="javascript:void(0);">
						<div class="row gutter-xs">
							<div class="col-xs-4 col-md-3">
								<div class="text-left" data-toggle="match-height">
									<h5>Chapter: </h5>
									<input id="txtChapter" name="txtChapter" class="form-control" type="text" placeholder="">
									<input type="hidden" name="hdChapter" id="hdChapter" />
								</div>
							</div>
							<div class="col-xs-4 col-md-3">
								<div class="text-left" data-toggle="match-height">
									<h5>Funcion: </h5>
									<input id="txtFuncion" name="txtFuncion" class="form-control" type="text" placeholder="">
									<input type="hidden" name="hdFuncion" id="hdFuncion" />
								</div>
							</div>
							<div class="col-xs-4 col-md-3">
				<h5>Rol: </h5>
				<select id="ddlRol" class="form-control">

				</select>
			</div>
							<div class="col-xs-4 col-md-3">
								<div class="text-left" data-toggle="match-height">
									<h5>&nbsp;</h5>
									<button id="btnBuscar" class="btn btn-primary btn-width-custom" onclick="RefrescarListado()">Buscar</button>
									@*<button id="btnexportar" class="btn btn-primary btn-width-custom">exportar</button>*@
									@*<button id="btnexportarper" class="btn btn-primary btn-width-custom">exportar por<br />persona</button>*@
								</div>
							</div>





						</div>
						<div class="row gutter-xs">
							<div class="col-xs-4 col-md-3">
								<div class="text-left" data-toggle="match-height">
									<h5>Tribu: </h5>
									<input id="txtTribu" name="txtTribu" class="form-control" type="text" placeholder="">
									<input type="hidden" name="hdTribu" id="hdTribu" />
								</div>
							</div>
							<div class="col-xs-4 col-md-3">
								<div class="text-left" data-toggle="match-height">
									<h5>Grupo de Red: </h5>
									<input id="txtGrupoRed" name="txtGrupoRed" class="form-control" type="text" placeholder="">
									<input type="hidden" name="hdGrupoRed" id="hdGrupoRed" />
								</div>
							</div>
							<div class="col-xs-4 col-md-3">
								<div class="text-left" data-toggle="match-height">
									<h5>Producto: </h5>
									<input id="txtProducto" name="txtProducto" class="form-control" type="text" placeholder="">
									<input type="hidden" name="hdProducto" id="hdProducto" />
								</div>
							</div>

							<div class="col-xs-4 col-md-3">
								<h5>&nbsp;</h5>
								<div class="btn-group">
									<button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
										<span class="icon icon-external-link"></span>
										<span class="count-text">Exportar</span>&nbsp;
										<span class="caret"></span>
									</button>
									<ul class="dropdown-menu" style="min-width: initial">
										<li><a href="javascript:ExportarInfo()" class="text-center">Por Función</a></li>
										<li><a href="javascript:ExportarInfoPersona()" class="text-center">Por Persona</a></li>
									</ul>
								</div>
							</div>




						</div>
					</form>
				</div>
			</fieldset>
		</div>
	</div>
</div>



<div class="row gutter-xs">
	<div class="col-xs-12">
		<div class="card">
			<div class="card-body">
				<table id="tblRegistros" class="table table-striped table-nowrap dataTable" cellspacing="0" width="100%" data-unique-id="Id" data-mobile-responsive="true" >
					<caption class="caption text-left">
						<span>Consolidado de Matriz de Roles</span>
					</caption>
					<thead>
						<tr>
							<th data-formatter="rowNumFormatterServer" data-valign="middle" data-align="center" data-width="2%">#</th>
							<th data-field="Tribu" data-halign="center" data-valign="middle" data-align="left" data-sortable="true" data-sort-name="Tribu" data-width="25%">Tribu/Coe</th>
							<th data-field="Chapter" data-halign="center" data-valign="middle" data-align="left" data-sortable="true" data-sort-name="Chapter" data-width="25%">Chapter/Unit</th>
							<th data-field="Funcion" data-halign="center" data-valign="middle" data-align="left" data-sortable="true" data-sort-name="Funcion" data-width="25%">Función</th>
							<th data-field="Nombre" data-halign="center" data-valign="middle" data-align="center" data-sortable="true" data-sort-name="Nombre" data-width="38%">Producto</th>
							<th data-field="Rol" data-halign="center" data-valign="middle" data-align="left" data-sortable="true" data-sort-name="Funcion" data-width="25%">Rol</th>
							<th data-field="GrupoRed" data-halign="center" data-valign="middle" data-align="left" data-sortable="true" data-sort-name="Chapter" data-width="25%">Grupo de Red</th>
							<th data-field="Persona" data-halign="center" data-valign="middle" data-align="left" data-sortable="true" data-sort-name="Persona" data-width="25%">Persona</th>

							@*<th data-field="ProductoRelacionados" data-halign="center" data-valign="middle" data-align="center" data-sortable="true" data-sort-name="ProductoRelacionados" data-width="25%">Productos relacionados</th>*@
							@*<th data-formatter="opcionesFormatter" data-field="Opciones" data-halign="center" data-valign="middle" data-align="center" data-width="23%">Agregar</th>*@
							@*<th data-field="NombreUsuarioCreacion" data-halign="center" data-valign="middle" data-align="center" data-sortable="true" data-sort-name="NombreUsuarioCreacion" data-width="20%">Usuario Creación</th>*@
						</tr>
					</thead>
				</table>
			</div>
		</div>
	</div>
</div>






