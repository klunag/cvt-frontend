
@{
    ViewBag.Title1 = "Estado de obsolescencia de aplicaciones";
    ViewBag.Title2 = "Dashboard Obsolescencia - Aplicación";
    ViewBag.Title3 = "Estado de obsolescencia de aplicaciones";
}

<link href="~/Content/bootstrap-multiselect.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-multiselect.js"></script>

<script src="~/Scripts/amcharts4/core.js"></script>
<script src="~/Scripts/amcharts4/charts.js"></script>
<script src="~/Scripts/amcharts4/themes/animated.js"></script>

<style>
    #report {
        width: 100%;
        height: 600px;
    }

    .div-report {
        display: none;
    }
</style>

<div class="card">
    <div class="card-body">
        <div class="card-search">
            <fieldset class="fieldset">
                <div class="card-search-box">
                    <form id="formFiltros">
                        <div class="row gutter-xs">
                            <div class="form-group">
                                <div class="col-xs-3 col-md-3">
                                    <div class="text-left" data-toggle="match-height">
                                        <h5>Dominio: (*)</h5>
                                        <select id="cbFilDominio" name="cbFilDominio" class="form-control" multiple="multiple"></select>
                                    </div>
                                </div>
                                <div class="col-xs-3 col-md-3">
                                    <div class="text-left" data-toggle="match-height">
                                        <h5>Subdominio: (*)</h5>
                                        <select id="cbFilSubdominio" name="cbFilSubdominio" class="form-control" multiple="multiple"></select>
                                    </div>
                                </div>
                                <div class="col-xs-3 col-md-3">
                                    <div class="text-left" data-toggle="match-height">
                                        <h5>Tipo de equipo: (*)</h5>
                                        <select id="cbFilTipoEquipo" name="cbFilTipoEquipo" class="form-control"></select>
                                    </div>
                                </div>
                                <div class="col-xs-3 col-md-3">
                                    <div class="text-left" data-toggle="match-height">
                                        <h5>Fecha de la consulta: (*)</h5>
                                        <div class="input-group date" id="divFechaFiltro">
                                            <input type="text" id="FechaFiltro" name="FechaFiltro" class="form-control" value="@DateTime.Now.ToString("dd/MM/yyyy")" />
                                            @*<span class="input-group-addon">
                                                <span class="icon icon-calendar"></span>
                                            </span>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row gutter-xs">   
                            <div class="form-group">
                                <div class="col-xs-3 col-md-3">
                                    <div class="text-left" data-toggle="match-height">
                                        <h5>Agrupación: (*)</h5>
                                        <select id="cbFilAgrupacion" name="cbFilAgrupacion" class="form-control"></select>
                                    </div>
                                </div>
                                <div class="col-xs-3 col-md-3">
                                    <div class="text-left" data-toggle="match-height">
                                        <h5>Subsidiaria (a nivel de equipos): (*)</h5>
                                        <select id="cbFilSubsidiaria" name="cbFilSubsidiaria" class="form-control" multiple="multiple"></select>
                                    </div>
                                </div>
                                <div class="col-xs-3 col-md-3">
                                    <div class="text-left" data-toggle="match-height">
                                        <h5>Estado de la aplicación: (*)</h5>
                                        <select id="cbFilEstado" name="cbFilEstado" class="form-control" multiple="multiple"></select>
                                    </div>
                                </div>
                            </div>
                        </div>                       
                    </form>
                </div>
            </fieldset>
        </div>
    </div>
</div>
<div class="panel panel-body text-right" style="background-color: transparent;" data-toggle="match-height">
    <a class="btn btn-primary btn-width-custom" href="javascript: void(0)" onclick="ExportarInfo()">
        <span class="icon icon-external-link"></span>
        <span class="count-text">Exportar</span>
    </a>
    <a class="btn btn-primary" href="javascript: void(0)" onclick="ActualizarGraficos()">
        <span class="count-text">Generar Gráficos</span>
    </a>
</div>
<div class="row gutter-xs">
    <div class="col-xs-12 div-report">
        <div class="card">
            <div class="card-header">
                <strong>Evolución</strong>
            </div>
            <div class="card-body">
                <div id="report"></div>
            </div>
        </div>
    </div>
</div>
<script src="~/app/dashboardAgrupacion.js?v=2.1.0"></script>

