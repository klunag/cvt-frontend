
@{
    ViewBag.Title1 = "Responsabilidades del relevamiento de IP";
    ViewBag.Title2 = "Dashboard Obsolescencia - Equipos";
    ViewBag.Title3 = "Responsabilidades del relevamiento de IP";
}

<link href="~/Content/bootstrap-multiselect.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-multiselect.js"></script>
<style>
    .estiloDefecto {
        text-align: center;
        width: 10%;
    }

    .fondoClaro {        
        text-align: center;
        vertical-align: middle !important;
        width: 7%;
    }

    .fondoAmarillo {
        color: #F7A033 !important;
        font-weight: bold;
        text-align: center;
        vertical-align: middle !important;
        width: 6%;
    }

    .fondoVerdeLeve {
        color: #91C337 !important;
        font-weight: bold;
        /*color: #ffffff !important;*/
        text-align: center;
        vertical-align: middle !important;
        width: 6%;
    }

    .fondoRojo {
        color: #E33D01 !important;
        font-weight: bold;
        /*color: #ffffff !important;*/
        text-align: center;
        vertical-align: middle !important;
        width: 6%;
    }
    
</style>
<div class="card">
    <div class="card-body">
        <div class="card-search">
            <fieldset class="fieldset">
                <legend class="legend">Filtro de búsqueda</legend>
                <form id="formFiltros">
                    <div class="card-search-box">
                        <div class="row gutter-xs">
                            <div class="col-xs-3 col-md-3">
                                <div class="text-left" data-toggle="match-height">
                                    <h5>Fecha de la consulta: (*)</h5>
                                    <div class="input-group date" id="divFechaFiltro">
                                        <input type="text" id="FechaFiltro" name="FechaFiltro" class="form-control" value="@DateTime.Now.ToString("dd/MM/yyyy")" />
                                        @*<span class="input-group-addon">
                                            <span class="icon icon-calendar"></span>
                                        </span>*@
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-3 col-md-3">

                            </div>
                            <div class="col-xs-3 col-md-3">
                                @*<h5>&nbsp;</h5>
                                <button id="btnExportar" type="button" class="btn btn-primary btn-width-custom" onclick="ExportarInfo()">Exportar</button>*@
                            </div>
                            <div class="col-xs-3 col-md-3">
                                <h5>&nbsp;</h5>
                                <button id="btnBuscar" type="button" class="btn btn-primary btn-width-custom" onclick="Buscar()">Buscar</button>
                            </div>
                        </div>                        
                    </div>
                </form>
            </fieldset>
        </div>
    </div>
</div>
<div class="panel panel-body text-right" style="background-color: transparent;" data-toggle="match-height">
    
</div>

<div class="row gutter-xs">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                <strong>Relevamiento - Segmentación de red</strong>
            </div>
            <div class="card-body">
                <table id="tblRegistro" class="table" data-show-footer="true" style="font-size:11px !important;">
                    <thead>
                        <tr>
                            <th data-field="Responsable" data-halign="center" data-valign="middle" data-align="left" data-footer-formatter="dataFormatter">Responsable</th>
                            <th data-field="StaticOK" data-halign="center" data-valign="middle" data-align="center" data-width="100px" data-footer-formatter="totalFormatter" class="fondoVerdeLeve">Ruta estática <br /> (Ok)</th>
                            <th data-field="StaticNOK" data-halign="center" data-valign="middle" data-align="center" data-width="100px" data-footer-formatter="totalFormatter" class="fondoRojo">Ruta estática <br /> (No Ok)</th>
                            <th data-field="GatewaysOK" data-halign="center" data-valign="middle" data-align="center" data-width="100px" data-footer-formatter="totalFormatter" class="fondoVerdeLeve">Gateways <br /> (Ok)</th>
                            <th data-field="GatewaysNOK" data-halign="center" data-valign="middle" data-align="center" data-width="100px" data-footer-formatter="totalFormatter" class="fondoRojo">Gateways <br /> (No Ok)</th>
                            <th data-field="TotalIP" data-halign="center" data-valign="middle" data-align="center" data-width="100px" data-footer-formatter="totalFormatter">IPs <br />(Total)</th>
                            <th data-field="TotalExisteCVT" data-halign="center" data-valign="middle" data-align="center" data-width="100px" data-footer-formatter="totalFormatter">IPs <br />en CVT</th>
                            <th data-field="NroEquipos" data-halign="center" data-valign="middle" data-align="center" data-width="100px" data-footer-formatter="totalFormatter">Nro <br />Equipos</th>
                            <th data-field="PorcAvanceCVT" data-halign="center" data-valign="middle" data-align="center" data-width="100px">% Avance <br />en CVT</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row gutter-xs hidden" style="margin-top:20px;" >
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                <strong>Relevamiento - Estado por equipo</strong>
            </div>
            <div class="card-body">
                <table id="table" data-detail-view="true" class="table table-striped table-nowrap" cellspacing="0" style="width:100%; font-size: 10px !important; vertical-align:middle !important;">
                    <thead>
                        <tr></tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/app/responsableip.js?v=2.1.0"></script>