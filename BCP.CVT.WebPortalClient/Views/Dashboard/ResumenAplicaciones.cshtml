@{
    ViewBag.Title1 = "Resumen de aplicaciones";
    ViewBag.Title2 = "Dashboard Obsolescencia - Aplicación";
    ViewBag.Title3 = "Resumen de aplicaciones";
}
<link href="~/Content/bootstrap-multiselect.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-multiselect.js"></script>
<style>
    .table-scrollable {
        width: auto;
        overflow-x: auto;
        overflow-y: hidden;
        margin: 10px 0;
    }

    .table th {
        white-space: nowrap;
    }

    .table td {
        vertical-align: top;
        border-bottom: 1px solid #ddd;
        padding: 2px 5px;
    }

    .fixed-table-container {
        position: initial;
        clear: none;
    }

    th.table-fixed-cell {
        border: 1px solid #ddd !important;
        border-right: none !important;
    }

    td.table-fixed-cell {
        border-left: 1px solid #ddd !important;
        border-top: none !important;
    }

    .fondoRojo {
        background-color: #E33D01 !important;
        color: #ffffff !important;
        text-align: center;
        width: 8%;
    }

    .fondoNaranja {
        background-color: #FF7F0D !important;
        color: #ffffff !important;
        text-align: center;
        width: 8%;
    }

    .fondoAmarillo {
        background-color: #FFDD5B !important;
        text-align: center;
        width: 8%;
    }

    .fondoVerdeLeve {
        background-color: #91C337 !important;
        color: #ffffff !important;
        text-align: center;
        width: 8%;
    }

    .fondoVerdeFuerte {
        background-color: #22A71C !important;
        color: #ffffff !important;
        text-align: center;
        width: 8%;
    }

    .fondoCeleste {
        background-color: #bfd9eb !important;
        color: #000000 !important;
        text-align: center;
        width: 8%;
    }

    .fondoBlanco {
        text-align: center;
        width: 10%;
    }

    .ui-autocomplete {
        max-height: 100px;
        overflow-y: auto;
        /* prevent horizontal scrollbar */
        overflow-x: hidden;
    }
    /* IE 6 doesn't support max-height
    * we use height instead, but this forces the menu to always be this tall
    */
    * html .ui-autocomplete {
        height: 100px;
    }
</style>
<div class="card">
    <div class="card-body">
        <div class="card-search">
            <fieldset class="fieldset">
                <legend class="legend">Filtro de búsqueda</legend>
                <form id="formFiltros">
                    <div class="card-search-box">
                        <div class="row gutter-xs">
                            <div class="col-xs-3 col-md-3">
                                <div class="text-left ui-widget containerJefeEquipo" data-toggle="match-height">
                                    <h5>Jefe de equipo: @*<br />&nbsp;*@</h5>
                                    @*<input type="text" id="txtJefeEquipo" name="txtJefeEquipo" value="" class="form-control ui-autocomplete-input" />*@
                                    <select id="txtJefeEquipo" name="txtJefeEquipo" class="form-control"></select>
                                </div>
                            </div>
                            <div class="col-xs-3 col-md-3">
                                <div class="text-left ui-widget containerOwner" data-toggle="match-height">
                                    <h5>Lider usuario: @*<br />&nbsp;*@</h5>
                                    @*<input type="text" id="txtOwner" name="txtOwner" value="" maxlength="100" autocomplete="on" class="form-control ui-autocomplete-input" />*@
                                    <select id="txtOwner" name="txtOwner" class="form-control"></select>
                                </div>
                            </div>
                            <div class="col-xs-3 col-md-3">
                                <div class="text-left ui-widget containerGestionado" data-toggle="match-height">
                                    <h5>Líder de tribu (TTL): </h5>
                                    @*<input type="text" id="txtTTL" name="txtTTL" value="" maxlength="100" autocomplete="on" class="form-control ui-autocomplete-input" />*@
                                    <select id="txtTTL" name="txtTTL" class="form-control"></select>
                                </div>
                            </div>
                            <div class="col-xs-3 col-md-3">
                                <div class="text-left ui-widget containerAplicacion" data-toggle="match-height">
                                    <h5>Aplicación (código) </h5>
                                    <input type="text" id="txtAplicacion" name="txtAplicacion" value="" maxlength="100" autocomplete="on" class="form-control ui-autocomplete-input" />
                                    <input type="hidden" name="hdAplicacionId" id="hdAplicacionId" value="0" />
                                </div>
                            </div>
                        </div>                        
                        <div class="row gutter-xs filtroAvanzado">
                            <div class="col-xs-3 col-md-3">
                                <div class="text-left ui-widget" data-toggle="match-height">
                                    <h5>Estado de la aplicación: </h5>
                                    <select id="cbFilEstado" name="cbFilEstado" class="form-control"></select>
                                </div>
                            </div>
                            <div class="col-md-9 col-xs-3">
                                <div class="text-right">
                                    <h5>&nbsp;</h5>
                                    <button id="btnBuscar" type="button" class="btn btn-primary btn-width-custom" onclick="RefrescarListado()">Buscar</button>
                                </div>
                            </div>
                        </div>                                                                        
                    </div>
                </form>

            </fieldset>
        </div>
    </div>
</div>

<div class="row gutter-xs" style="margin-top:20px;">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-body">
                <table class="table table-striped table-nowrap table-bordered" cellspacing="0" style="width:100%; margin-bottom:0 !important;">
                    <thead>
                        <tr>
                            <td></td>
                            <td style="width:50%; font-weight:bold;text-align:center;" colspan="5">Obsolescencia</td>
                            <td style="width:10%;"></td>
                        </tr>
                    </thead>
                </table>
                <table id="table" data-detail-view="true" class="table table-striped table-nowrap" cellspacing="0" style="width:100%;">
                    <thead>
                        <tr></tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/app/resumenAplicaciones.js?v=2.1.0"></script>
