
@{
	Layout = "~/Views/Shared/_EmptyLayout.cshtml";
	ViewBag.Title1 = "Backups";
	ViewBag.Title2 = "Gestión de Portafolio";
	ViewBag.Title3 = "Backups";
}
@*<meta charset="UTF-8">*@
<div class="card">
	<div class="card-body">
		<div class="card-search">
			<fieldset class="fieldset">
				<legend class="legend">Filtro de búsqueda</legend>
				<div class="card-search-box">
					<div class="row gutter-xs">
						<div class="col-xs-3 col-md-3">
							<div class="text-left" data-toggle="match-height">
								<h5>Usuario: </h5>
								<div class="input-with-icon">
									<input id="txtFiltroMatricula" name="txtFiltroMatricula" class="form-control input-thick pill input-with-icon-search" type="text">
									<span class="icon icon-search input-icon"></span>
								</div>
							</div>
						</div>
						<div class="col-xs-3 col-md-3">
							<h5>Fecha Desde: </h5>
							<div class="input-group date" id="divFechaDesde">
								<input type="text" id="txtFiltroFechaDesde" name="txtFiltroFechaDesde" class="form-control" value="@DateTime.Now.ToString("dd/MM/yyyy")" />
								<span class="input-group-addon">
									<span class="icon icon-calendar"></span>
								</span>
							</div>
						</div>
						<div class="col-xs-3 col-md-3">
							<h5>Fecha Hasta: </h5>
							<div class="input-group date" id="divFechaHasta">
								<input type="text" id="txtFiltroFechaHasta" name="txtFiltroFechaHasta" class="form-control" value="@DateTime.Now.ToString("dd/MM/yyyy")" />
								<span class="input-group-addon">
									<span class="icon icon-calendar"></span>
								</span>
							</div>
						</div>
					</div>

					<div class="row gutter-xs">
						<div class="col-md-12">
							<div class="text-right">
								<a class="btn btn-primary btn-width-custom" href="javascript: void(0)" onclick="RefrescarListado()">
									<span class="count-text">Buscar</span>
								</a>
							</div>
						</div>
					</div>
				</div>
			</fieldset>
		</div>
	</div>
</div>

<div class="panel panel-body text-right" style="background-color: transparent;" data-toggle="match-height">
	<a id="btnBackup" class="btn btn-primary" href="javascript: void(0)">
		<span class="icon icon-external-link"></span>
		<span class="count-text">Generar Backup</span>
	</a>
</div>

<div class="row gutter-xs">
	<div class="col-xs-12">
		<div class="card">
			<div class="card-body">
				<table id="tblRegistro" class="table table-striped table-nowrap table-bordered" cellspacing="0" width="100%" data-mobile-responsive="true">
					<thead>
						<tr>
							<th data-formatter="rowNumFormatterServer" data-valign="middle" data-align="center" data-width="3%">#</th>
							<th data-field="FechaCreacionStr" data-halign="center" data-valign="middle" data-align="left" data-width="23%">Fecha del backup</th>
							<th data-field="UsuarioCreacion" data-halign="center" data-valign="middle" data-align="left" data-width="18%">Usuario</th>
							<th data-field="Comentario" data-halign="center" data-valign="middle" data-align="left">Comentarios</th>
							<th data-formatter="opciones" data-halign="center" data-valign="middle" data-align="center" data-width="8%">Descargar</th>
						</tr>
					</thead>
				</table>
			</div>
		</div>
	</div>
</div>

<!--Modal Generar Backup-->
<div id="MdGenerarBackupModal" tabindex="-1" role="dialog" class="modal fade bd-example-modal-sm">
	<div class="modal-dialog " role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">
					<span aria-hidden="true">×</span>
					<span class="sr-only">Close</span>
				</button>
				<h4 class="modal-title" id="titleForm">Generar Backup</h4>
			</div>
			<div class="modal-body">
				<form id="formRegistro">

					<div class="form-group">
						<label class="control-label">
							Comentarios:
						</label>

						<textarea id="txtComentarios" name="txtComentarios" class="form-control" rows="5"></textarea>

					</div>

				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
				<button id="btnGenerarBackup" type="button" class="btn btn-primary" onclick="GenerarBackupPortafolio()" data-loading-text="Procesando...">Guardar</button>
			</div>
		</div>
	</div>
</div>
<!--Modal EditarGenerar Backup (Aplicacion)-->


<script src="~/app/GestionPortafolio/portafolioBackup.js?v=2.0.0"></script>

