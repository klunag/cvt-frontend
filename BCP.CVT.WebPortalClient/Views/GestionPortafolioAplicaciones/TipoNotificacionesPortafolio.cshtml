<!--Modal Add or Edit-->
<div id="MdAddOrEditModal" tabindex="-1" role="dialog" class="modal fade">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="titleForm"></h4>
            </div>
            <div class="modal-body">
                <form id="formAddOrEdit">
                    <input type="hidden" id="hdId" name="hdId" value="0" />                                       
                    <div class="row">
                        <div class="col-md-4">
                            <label class="control-label">Buzón de Salida</label>
                            <input id="txtBuzonSalida" name="txtBuzonSalida" class="form-control">
                        </div>
                        <div class="col-md-8">
                            <label class="control-label">Asunto</label>
                            <input id="txtAsunto" name="txtAsunto" class="form-control" type="text">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label class="control-label">Correos adicionales dentro de la sección Para (Separados por ; )</label>
                            <input id="txtBuzonPara" name="txtBuzonPara" class="form-control" maxlength="500">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label class="control-label">Activar/Desactivar el envio de notificaciones por rol</label>
                        </div>
                        <div>
                            <div class="col-md-2">
                                <label class="control-label col-md-12">Solicitante</label>
                                <div class="col-md-12">
                                    <input class="col-md-12" id="txtSolicitante" name="txtSolicitante" type="checkbox" checked data-toggle="toggle">
                                </div>                                
                            </div>
                            <div class="col-md-2">
                                <label class="control-label">Arquitecto evaluador</label>
                                <div><input id="txtArqNegocio" name="txtArqNegocio" type="checkbox" checked data-toggle="toggle"></div>
                                <!--<input id="txtArqNegocio" name="txtArqNegocio" class="form-control">-->
                            </div>
                            <div class="col-md-2">
                                <label class="control-label col-md-12">Arquitecto de tecnología </label>
                                <div class="col-md-12"><input id="txtATI" name="txtATI" type="checkbox" checked data-toggle="toggle"></div>
                                <!--<input id="txtATI" name="txtATI" class="form-control">-->
                            </div>
                            <div class="col-md-2">
                                <label class="control-label col-md-12">Lider Usuario/Owner</label>
                                <div class="col-md-12"><input id="txtLiderUsu" name="txtLiderUsu" type="checkbox" checked data-toggle="toggle"></div>
                                <!--<input id="txtLiderUsu" name="txtLiderUsu" class="form-control">-->
                            </div>
                            <div class="col-md-2">
                                <label class="control-label col-md-12">TL/TTL</label>
                                <div class="col-md-12"><input id="txtTLTTL" name="txtTLTTL" type="checkbox" checked data-toggle="toggle"></div>
                                <!--<input id="txtTLTTL" name="txtTLTTL" class="form-control">-->
                            </div>
                            <div class="col-md-2">
                                <label class="control-label col-md-12">DevSecOps</label>
                                <div class="col-md-12"><input id="txtDevSec" name="txtDevSec" type="checkbox" checked data-toggle="toggle"></div>                                
                                <!--<input id="txtDevSec" name="txtDevSec" class="form-control">-->
                            </div>
                        </div>
                    </div>
                        
                    <div class="row">
                        <div>
                            <div class="col-md-2">
                                <label class="control-label col-md-12">Jefe de equipo</label>
                                <div  class="col-md-12"><input id="txtJefeEquipo" name="txtJefeEquipo" type="checkbox" checked data-toggle="toggle"></div>
                                <!--<input id="txtJefeEquipo" name="txtJefeEquipo" class="form-control">-->
                            </div>
                            <div class="col-md-2">
                                <label class="control-label">Gestor autorizador</label>
                                <div><input id="txtUsuAut" name="txtUsuAut" type="checkbox" checked data-toggle="toggle"></div>
                                <!--<input id="txtUsuAut" name="txtUsuAut" class="form-control">-->
                            </div>
                            <div class="col-md-2">
                                <label class="control-label col-md-12">Broker</label>
                                <div class="col-md-12"><input id="txtBroker" name="txtBroker" type="checkbox" checked data-toggle="toggle"></div>
                                <!--<input id="txtBroker" name="txtBroker" class="form-control">-->
                            </div>
                            <div class="col-md-2">
                                <label class="control-label col-md-12">Gobierno User IT</label>
                                <div class="col-md-12"><input id="txtGobiernoTI" name="txtGobiernoTI" type="checkbox" checked data-toggle="toggle"></div>
                                <!--<input id="txtGobiernoTI" name="txtGobiernoTI" class="form-control">-->
                            </div>
                            <div class="col-md-2">
                                <label class="control-label col-md-12">AIO</label>
                                <div class="col-md-12"><input id="txtAIO" name="txtAIO" type="checkbox" checked data-toggle="toggle"></div>
                                <!--<input id="txtAIO" name="txtAIO" class="form-control">-->
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-md-12">
                            <label class="control-label">Listas de distribución que se enviarán dentro de la sección Con Copia (Separados por ; )</label>
                            <input id="txtBuzonCC" name="txtBuzonCC" class="form-control" maxlength="500">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label class="control-label">Cuerpo</label>
                            <textarea id="txtCuerpo" name="txtCuerpo" class="form-control" rows="5" style="resize:none"></textarea>
                        </div>
                    </div>
                    <div class="row cuerpo-alt" style="display:none;">
                        <div class="col-md-12">
                            <label class="control-label">Cuerpo alternativo</label>
                            <textarea id="txtCuerpoAlt" name="txtCuerpoAlt" class="form-control cuerpo-alt" rows="5" style="resize:none"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button id="btnRegistrar" class="btn btn-primary" onclick="RegistrarAddOrEdit()" type="button" data-loading-text="Procesando...">Registrar</button>
            </div>
        </div>
    </div>
</div>
