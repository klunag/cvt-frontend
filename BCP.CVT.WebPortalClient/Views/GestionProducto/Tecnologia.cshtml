@{
    ViewBag.Title1 = "Gestión de productos";
    ViewBag.Title2 = "Producto";
    ViewBag.Title3 = "Tecnología";
}

<div class="card">
    <div class="card-body">
        <div class="card-search">
            <fieldset class="fieldset">
                <legend class="legend">Filtro de búsqueda</legend>
                <div class="card-search-box">
                    <form action="javascript:void(0);">
                        <div class="form-group row">
                            <div class="col-md-5 col-xs-5 col-sm-5">
                                <label>Descripción: </label>
                                <div class="input-with-icon">
                                    <input id="txtBusDescripcionTecnologia" class="form-control input-thick pill input-with-icon-search" type="text" placeholder="Descripción...">
                                    <span class="icon icon-search input-icon"></span>
                                </div>
                            </div>
                            <div class="col-md-5 col-xs-5 col-sm-5">
                                <label>Estado: </label>
                                <div class="input-with-icon">
                                    <select id="cbBusEstadoObsolescenciaTecnologia" class="form-control input-thick pill input-with-icon-search">
                                        <option value="-1">Todos</option>
                                    </select>
                                    <span class="icon icon-search input-icon"></span>
                                </div>
                            </div>
                            <div class="col-md-2 col-xs-4 col-sm-3">
                                <label>&nbsp;</label><div class="clear"></div>
                                <button id="btnBusBuscar" class="btn btn-primary btn-width-custom" onclick="BuscarProducto()">Buscar</button>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-5 col-xs-5 col-sm-5">
                                <label>Tipo de Producto: </label>
                                <div class="input-with-icon">
                                    <select id="cbBusTipoProductoTecnologia" class="form-control input-thick pill input-with-icon-search">
                                        <option value="-1">Todos</option>
                                    </select>
                                    <span class="icon icon-search input-icon"></span>
                                </div>
                            </div>
                            <div class="col-md-5 col-xs-5 col-sm-5">
                                <label>Estado de Estandarización: </label>
                                <div class="input-with-icon">
                                    <select id="cbBusTipoTecnologia" class="form-control input-thick pill input-with-icon-search">
                                        <option value="-1">Todos</option>
                                    </select>
                                    <span class="icon icon-search input-icon"></span>
                                </div>
                            </div>
                            <div class="col-md-2 col-xs-4 col-sm-3">
                                <label>&nbsp;</label><div class="clear"></div>
                                <button id="btnBusTipo" class="btn btn-primary btn-width-custom" onclick="AddProducto()">Nuevo</button>
                            </div>
                        </div>
                    </form>
                </div>
            </fieldset>
        </div>
    </div>
</div>

<div class="row gutter-xs">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                <strong>Registros de Tecnologias del producto <text id="lblProducto"></text></strong>
            </div>
            <div class="card-body">
                <table id="tbl-lista" class="table table-striped table-nowrap dataTable" cellspacing="0" width="100%" data-unique-id="WorkerId" data-mobile-responsive="true">
                    <thead>
                        <tr>
                            <th data-formatter="rowNumFormatterServer" data-valign="middle" data-align="center" data-width="2%">#</th>
                            <th data-field="Clave" data-halign="center" data-valign="middle" data-align="left" data-sortable="true" data-width="20%">Clave de la Tecnología</th>
                            <th data-field="DominioStr" data-halign="center" data-valign="middle" data-align="center" data-sortable="true" data-sort-name="DominioStr" data-width="10%">Dominio</th>
                            <th data-field="SubDominioStr" data-halign="center" data-valign="middle" data-align="center" data-width="10%" data-sortable="true" data-sort-name="SubDominioStr">SubDominio</th>
                            <th data-field="EstadoObsolescenciaStr" data-halign="center" data-valign="middle" data-align="center" data-sortable="true" data-sort-name="EstadoObsolescenciaId" data-width="10%">Estado</th>
                            <th data-field="TipoProductoStr" data-halign="center" data-valign="middle" data-align="center" data-sortable="true" data-sort-name="TipoProductoStr" data-width="10%">Tipo de producto</th>
                            <th data-field="TipoProductoStr" data-halign="center" data-valign="middle" data-align="center" data-sortable="true" data-sort-name="TipoProductoStr" data-width="10%">Tipo de tecnología</th>
                            <th data-field="TipoProductoStr" data-halign="center" data-valign="middle" data-align="center" data-sortable="true" data-sort-name="TipoProductoStr" data-width="10%">Fecha fin de soporte</th>
                            <th data-formatter="opciones" data-field="Opciones" data-halign="center" data-valign="middle" data-align="center" data-width="5%">Opciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <input type="hidden" name="hFilTipo" id="hFilTipo" value="" />
</div>

<script>
    var productoId = @Request.Params["id"];
</script>

<script src="~/app/gestionProductoTecnologia.js"></script>