}

<link href="~/Content/bootstrap-multiselect.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-multiselect.js"></script>

<div class="card">
    <div class="card-body">
        <div class="card-search">
            <fieldset class="fieldset" style="padding-block-start: 0 !important; padding-block-end: 0 !important;">
                <legend class="legend" style="margin-bottom: 0 !important;">Filtro de búsqueda</legend>
                <div class="card-search-box">
                    <div class="row gutter-xs">
                        <div class="col-xs-3">
                            <div class="text-left" data-toggle="match-height">
                                <h5>Aplicación: </h5>
                                <div class="input-with-icon filAppContainer">
                                    <input id="txtFilApp" name="txtFilApp" class="form-control input-thick pill input-with-icon-search" type="text">
                                    <span class="icon icon-search input-icon"></span>
                                </div>
                                <input type="hidden" id="hdFilAppId" name="hdFilAppId" value="" />
                            </div>
                        </div>
                        <div class="col-xs-3 containerFiltroGestionadoPor">
                            <div class="text-left" data-toggle="match-height">
                                <h5>Gestionado por: </h5>
                                <input type="text" name="txtGestionado" id="txtGestionado" class="form-control" value="" maxlength="80" />
                            </div>
                        </div>
                        <div class="col-xs-3">
                            <h5>Estados: </h5>
                            <div class="text-left" data-toggle="match-height">
                                <select id="cbEstado" class="form-control" multiple="multiple"></select>
                            </div>
                        </div>
                        <div class="col-xs-1">
                            <h5>&nbsp;</h5>
                            <div class="text-right">
                                <a class="btn btn-primary btn-width-custom" href="javascript: void(0)" onclick="RefrescarListado()">
                                    <span class="count-text">Buscar</span>
                                </a>
                            </div>
                            <div class="text-right" style="margin-top: 8px">
                                <a class="btn btn-primary btn-width-custom" href="javascript: void(0)" onclick="Exportar()">
                                    <span class="count-text">Exportar</span>
                                </a>
                            </div>
                        </div>
                        <div class="col-xs-2">
                            <h5>&nbsp;</h5>
                            <div class="text-left">
                                <a class="btn btn-primary btn-width-custom" href="~/Guardicore/Connection" style="width: auto">
                                    <span class="count-text">Ver consulta en línea</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</div>

