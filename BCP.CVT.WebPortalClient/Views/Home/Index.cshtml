        background-repeat: repeat-y;
        -webkit-background-size: 4px 1px;
        background-size: 4px 1px;
        display: table-cell;
        padding-bottom: 15px;
        text-align: center;
        vertical-align: top;
        white-space: nowrap;
        width: 1%;
    }

    .timeline-content {
        display: table-cell;
        padding-bottom: 15px;
        padding-left: 15px;
        vertical-align: middle;
        width: 99%;
    }

    .timeline-media {
        background-color: #e6eef1;
        border-color: #e6eef1;
        border-style: solid;
        border-width: 3px;
        -webkit-box-sizing: content-box;
        box-sizing: content-box;
        display: inline-block;
    }

    .sq-24 {
        display: inline-block;
        font-size: 12px;
        height: 24px;
        line-height: 24px;
        text-align: center;
        width: 24px;
    }

    .card-img {
        border-radius: 3px;
    }

    .overlay {
        display: block;
        overflow: hidden;
        position: relative;
    }

    .bg-info-a75 {
        background-color: rgba(25, 118, 210, 0.75);
        border-color: #1976d2;
        color: #fff;
    }

    .overlay-content {
        bottom: 0px;
        color: #fff;
        display: block;
        left: 0px;
        overflow: hidden;
        padding: 15px;
        position: absolute;
        right: 0px;
        top: 0px;
    }

    .fh {
        display: table;
        height: 100%;
        width: 100%;
    }

    .fh-m {
        display: table-cell;
        vertical-align: middle;
    }

    .icon-works {
        display: inline-block;
        font-family: icon-works;
        font-size: inherit;
        font-style: normal;
        font-weight: 400;
        line-height: 1;
        text-align: center;
        text-rendering: auto;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    .sq-96 {
        display: inline-block;
        font-size: 48px;
        height: 96px;
        line-height: 96px;
        text-align: center;
        width: 96px;
    }

    .list-inline {
        padding-left: 0px;
        list-style: none;
        margin-left: -5px;
    }

    .carousel {
        position: relative;
    }

    .carousel-inner {
        position: relative;
        overflow: hidden;
        width: 100%;
    }

    .bg-gray-a75 {
        background-color: rgba(125, 125, 142, 0.75);
        border-color: #7d7d8e;
        color: #fff;
    }

    .caption {
        background-color: white;
        color: #f7a033;
    }

    .bg-orange {
        background-color: #ffedd6;
    }
</style>

