}
@{
    ViewBag.Title1 = "Site de Gestión de tecnologías y obsolescencia";
}
<script>
    var ID_USUARIO = '@ViewData.Eval("UsuarioId")';
    var USERNAME_USUARIO = '@ViewData.Eval("UserName")';
    var PERMISOID_USUARIO = '@ViewData.Eval("PermisoId")';
</script>

<style>
    .card {
        border-radius: 4px;
    }

    .p-x {
        padding-left: 10px !important;
        padding-right: 10px !important;
    }

    .fw-l {
        font-weight: 300 !important;
    }

    .bg-info {
        background-color: #1976d2;
        border-color: #1976d2;
        color: #fff;
    }

    .bg-danger {
        background-color: #e64a19;
        border-color: #e64a19;
        color: #fff;
    }

    .bg-primary {
        background-color: #f7a033 !important;
        border-color: #f7a033 !important;
        color: #fff;
    }

    .card-home {
        background-color: #fff;
        border: 1px solid #f1f1f1;
        border-radius: 4px;
        display: block;
        margin-bottom: 10px;
        position: relative;
    }

    .p-a-lg {
        padding: 30px !important;
    }

    .text-primary {
        color: #f7a033;
    }

    .row {
        margin-bottom: 0px !important;
    }

    .card-header {
        border-top-right-radius: 3px;
        border-top-left-radius: 3px;
        border-bottom: 1px solid #f1f1f1;
        padding: 10px 15px;
        position: relative;
    }

    .card-body {
        padding: 15px;
        position: relative;
    }

    .timeline {
        display: table;
        width: 100%;
        padding-left: 0px;
        margin-bottom: 0px;
    }

    .timeline-item {
        border-collapse: collapse;
        display: table-row;
    }

    .timeline-segment {
        background-color: transparent;
        background-image: url("data:image/svg+xml;charset=utf-8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 4 1' fill='%23e6eef1'%3E%3Cpath d='M0 0h4v1H0z'/%3E%3C/svg%3E");
