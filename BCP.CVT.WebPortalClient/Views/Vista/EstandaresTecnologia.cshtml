        }

        /*#tblTecnologiaEstandar td.vigenteClass, a.vigenteClass:link, a.vigenteClass:visited, a.vigenteClass:hover {
            color: #7ddc67;
        }*/

        /*#tblTecnologiaEstandar thead tr th {
            background-color: #013A81 !important;
