        var OPCIONES_PAGINACION_ALT = "[30,60,90]";
            USUARIO = getCache(NAME_CACHE_USUARIO);
    </script>

    <style>
        .navbar {
            border: none;
            border-radius: 5px;
            margin-bottom: 0;
        }

        .navbar-default {
            background-color: #012d74;
        }

