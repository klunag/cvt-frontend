@{
    ViewBag.Title1 = "Reporte de tecnologías";
    ViewBag.Title2 = "Gestión de las Tecnologías";
    ViewBag.Title3 = "Reporte de tecnologías";
}

<div class="card">
    <div class="card-body">
        <div class="card-search">
            <div class="card-search-box">
                <form action="javascript:void(0);">
                    <div class="row gutter-xs form-group">
                        <div class="col-md-10 col-xs-8 col-sm-9">
                            <div class="input-with-icon">
                                <input id="txtBusTec" class="form-control input-thick pill input-with-icon-search" type="text" placeholder="Nombre o descripción de la tecnología...">
                                <span class="icon icon-search input-icon"></span>
                            </div>
                        </div>
                        <div class="col-md-2 col-xs-4 col-sm-3">
                            <button id="btnBusTec" class="btn btn-primary btn-width-custom" onclick="buscarRegistros()">Buscar</button>
                        </div>
                    </div>                  
                    <div class="row gutter-xs">
                        <div class="col-xs-3 col-md-3">
                            <div class="text-left" data-toggle="match-height">
                                <h5>Dominio: </h5>
                                <select id="cbFilDom" class="form-control">
                                    <option value="-1">-- Todos --</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-xs-3 col-md-3">
                            <div class="text-left" data-toggle="match-height">
                                <h5>Subdominio: </h5>
                                <select id="cbFilSub" class="form-control">
                                    <option value="-1">-- Todos --</option>
                                </select>
                            </div>
                        </div>                       
                        <div class="col-xs-3 col-md-3">
                            <div class="text-left" data-toggle="match-height">
                                <h5>Aplica a: </h5>
                                <div class="input-with-icon">
                                    <input id="txtFilAplica" name="txtFilAplica" class="form-control input-thick pill input-with-icon-search" type="text" placeholder="">
                                    <span class="icon icon-search input-icon"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-3 col-md-3">
                            <div class="text-left" data-toggle="match-height">
                                <h5>Código: </h5>
                                <div class="input-with-icon">
                                    <input id="txtFilCodigo" name="txtFilCodigo" class="form-control input-thick pill input-with-icon-search" type="text" placeholder="">
                                    <span class="icon icon-search input-icon"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-3 col-md-3">
                            <div class="text-left" data-toggle="match-height">
                                <h5>Dueño: </h5>
                                <div class="input-with-icon">
                                    <input id="txtFilDueno" name="txtFilDueno" class="form-control input-thick pill input-with-icon-search" type="text" placeholder="">
                                    <span class="icon icon-search input-icon"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-3 col-md-3">
                            <div class="text-left" data-toggle="match-height">
                                <h5>Equipo: </h5>
                                <div class="input-with-icon">
                                    <input id="txtFilEquipo" name="txtFilEquipo" class="form-control input-thick pill input-with-icon-search" type="text" placeholder="">
                                    <span class="icon icon-search input-icon"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-body text-right" data-toggle="match-height">
    <a class="btn btn-primary btn-width-custom" href="javascript: void(0)" onclick="exportarRegistros()">
        <span class="icon icon-external-link"></span>
        <span class="count-text">Exportar</span>
    </a>
</div>

<div class="row gutter-xs">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                <strong>Tecnologías aprobadas en la plataforma</strong>
            </div>
            <div class="card-body">
                <table id="tblVTecnologia" class="table table-striped table-nowrap dataTable" cellspacing="0" width="100%" data-unique-id="Id" data-mobile-responsive="true">
                    <thead>
                        <tr>
                            <th data-formatter="rowNumFormatterServer" data-valign="middle" data-align="center" data-width="2%">#</th>
                            <th data-field="ClaveTecnologia" data-halign="center" data-valign="middle" data-align="left" data-sortable="true" data-width="20%">Nombre</th>
                            <th data-field="Dominio" data-halign="center" data-valign="middle" data-align="left" data-sortable="true" data-width="20%">Dominio</th>
                            <th data-field="Subdominio" data-halign="center" data-valign="middle" data-align="left" data-sortable="true" data-width="20%">Subdominio</th>
                            <th data-field="Tipo" data-halign="center" data-valign="middle" data-align="left" data-sortable="true" data-width="20%">Tipo tecnología</th>
                            <th data-field="UsuarioCreacion" data-halign="center" data-valign="middle" data-align="center" data-sortable="true" data-sort-name="UsuarioCreacion" data-width="10%">Creado por</th>
                            <th data-field="FechaCreacionFormato" data-halign="center" data-valign="middle" data-align="center" data-sortable="true" data-sort-name="FechaCreacion" data-width="10%">Fecha de registro</th>
                            <th data-field="ActivoDetalle" data-halign="center" data-valign="middle" data-align="center" data-sortable="true" data-sort-name="Activo" data-width="10%">Estado</th>
                            <th data-formatter="formatOpciones" data-field="Opciones" data-halign="center" data-valign="middle" data-align="center" data-width="5%">Opciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>


<script src="~/app/vistaTecnologia.js"></script>