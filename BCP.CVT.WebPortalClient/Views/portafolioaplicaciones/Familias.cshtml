<style>
    .opcionesStyle {
        width: 500px;
    }

    .fondoRojo {
        background-color: #E33D01 !important;
        color: #ffffff !important;
        text-align: center;
        width: 10%;
    }

    .fondoNaranja {
        background-color: #FF7F0D !important;
